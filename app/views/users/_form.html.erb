<div class="container relative-container">
  <div class="row justify-content-md-center">
    <div class="col-10 position-relative">
      <%= render "shared/errors" , obj: @user %>
        <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-body-tertiary rounded" , local: true, data: { turbo:
          false }) do |f| %>

          <div class="row mb-3">
            <%= f.label :username, class: "col-sm-2 col-form-label text-dark" %>
              <div class="col-sm-10">
                <%= f.text_field :username, class: "form-control shadow rounded" , placeholder: "Enter a username" %>
              </div>
          </div>

          <div class="row mb-3">
            <%= f.label :email, class: "col-sm-2 col-form-label text-dark" %>
              <div class="col-sm-10">
                <%= f.email_field :email, class: "form-control shadow rounded" , placeholder: "Enter your email address"
                  %>
              </div>
          </div>
          <div class="row mb-3">
            <%= f.label :password, class: "col-sm-2 col-form-label text-dark" %>
              <div class="col-sm-10">
                <%= f.password_field :password, class: "form-control shadow rounded" , placeholder: "Choose a password"
                  %>
              </div>
          </div>
          <div class="row d-flex align-items-end">
            <div class="col-sm-10"></div>
            <div class="col-auto">
              <%= f.submit(@user.new_record? ? "Signup" : "Update account" , class:"btn btn-success button-left shadow
                rounded") %>
            </div>
          </div>

          <% end %>
            <%= link_to "Cancel and Return to article listing" , articles_path, class: "text-dark" %>
    </div>
  </div>
</div>