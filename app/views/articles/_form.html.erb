<div class="container relative-container">
  <div class="row justify-content-md-center">
    <div class="col-10 position-relative">

      <%= form_with(model: @article, local: true, data: { turbo: false }) do |f| %>
        <div class="row mb-3">
          <%= f.label :title, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: "form-control" %>
            </div>
        </div>

        <div class="row mb-3">
          <%= f.label :description, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_area :description, rows: 5, class: "form-control" %>
            </div>
        </div>

        <div class="row d-flex align-items-end">
          <div class="col-sm-10"> </div>
          <div class="col-auto">
            <%= f.submit class:"btn btn-primary", style: "margin-left: 10px;" %>
          </div>
        </div>
        <% end %>

          <%= link_to "Cancel and Return to article listing" , articles_path %>

    </div>
  </div>


</div>