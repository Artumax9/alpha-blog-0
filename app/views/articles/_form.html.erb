<div class="container relative-container">
  <div class="row justify-content-md-center">
    <div class="col-10 position-relative">
      <%= render "shared/errors" %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-body-tertiary rounded" , local: true, data: { turbo:
        false }) do |f| %>

        <div class="row mb-3">
          <%= f.label :title, class: "col-sm-2 col-form-label text-dark" %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: "form-control shadow rounded" , placeholder: "Title of article" %>
            </div>
        </div>

        <div class="row mb-3">
          <%= f.label :description, class: "col-sm-2 col-form-label text-dark" %>
            <div class="col-sm-10">
              <%= f.text_area :description, rows: 5, class: "form-control shadow rounded" ,
                placeholder: "Description of article" %>
            </div>
        </div>
        <div class="row d-flex align-items-end">
          <div class="col-sm-10"></div>
          <div class="col-auto">
            <%= f.submit class:"btn btn-success button-left shadow rounded" %>
          </div>
        </div>

        <% end %>
          <%= link_to "Cancel and Return to article listing" , articles_path, class: "text-dark" %>
    </div>
  </div>
</div>